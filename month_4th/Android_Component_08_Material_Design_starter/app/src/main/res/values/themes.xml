<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SampleTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SampleTheme" parent="Base.Theme.SampleTheme" />


    <style name="Theme.M2StyleThemeColor" parent="Theme.Material3.DayNight.NoActionBar">
        <!--    <style name="Theme.M2StyleThemeColor" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MyTextViewTheme" parent="Theme.SampleTheme">
        <item name="android:textViewStyle">@style/MyTextStyle</item>
    </style>

    <style name="CustomTheme" parent="Theme.SampleTheme">
        <item name="android:textViewStyle">@style/CustomTextStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="materialButtonStyle">@style/CustomButtonStyle3</item>
    </style>

    <!-- attr로 선언된 값을 사용한다.  -->
    <style name="CustomAttrTheme" parent="Theme.SampleTheme">
        <item name="titleSize">40sp</item>
        <item name="titleStyle">@style/CustomTitleStyle</item>

        <!-- 이렇게 선언하면 하위 모든 textview에 적용 -->
        <!--        <item name="android:textViewStyle">?attr/titleStyle</item>-->
    </style>

</resources>